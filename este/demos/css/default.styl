body
  font-family 'PT Sans', sans-serif
  font-size 16px
  line-height 1.3
  color #111
  padding 0 1em .3em

*
  /* to remove quick blinking */
  -webkit-tap-highlight-color  rgba(0,0,0,0)

.disable-select
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none

[href]
  color #0044CC
  text-decoration none
  cursor pointer

  &:hover
    text-decoration underline

.demo-progress
  background-color #c1ff00
  display inline-block
  padding .1em .7em
  border-radius 4px

  &.loading
    font-weight bold

p
  max-width 560px